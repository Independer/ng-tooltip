{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "declaration": false,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "module": "esnext",
    "moduleResolution": "node",
    "importHelpers": true,
    "target": "es2015",
    "lib": [
      "es2018",
      "dom"
    ],
    "paths": {
      "ng-tooltip": [
        "dist/ng-tooltip/ng-tooltip",
        "dist/ng-tooltip"
      ],
      "@independer/ng-tooltip": [
        "dist/independer/ng-tooltip/independer-ng-tooltip",
        "dist/independer/ng-tooltip"
      ]
    }
  },
  "angularCompilerOptions": {
    "fullTemplateTypeCheck": true,
    "strictInjectionParameters": true
  }
}
